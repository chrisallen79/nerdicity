{
  "name": "cbbc",
  "version": "0.1.0",
  "description": "The Comic Book Book Club",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nerdicity-media/cbbc.git"
  },
  "private": true,
  "scripts": {
    "build": "webpack --config ./client/config/webpack.prod.js && webpack --config ./server/config/webpack.server.js",
    "client:prod": "serve -l 3000 -s ./dist/client",
    "server:prod": "node ./dist/server/index.js",
    "start:prod": "npm run build && npm run client:prod && npm run server:prod",
    "client:dev": "webpack-dev-server --config ./client/config/webpack.dev.js",
    "server:dev": "nodemon --ignore ./client/ --exec babel-node -- ./server/src/server.js",
    "start:dev": "concurrently -c \"bgBlue,bgMagenta\" -n \"CLIENT,SERVER\" -p \"[{name} {time}]\" -t \"HH:mm:ss.SSS\" \"npm run client:dev\" \"npm run server:dev\"",
    "docker:compose:up:local": "docker-compose -f ../docker-compose.yml up -d --build --force-recreate",
    "docker:compose:up:remote": "docker-compose -f ../docker-compose.yml -H ssh://ubuntu@54.167.123.102 up -d --build --force-recreate",
    "docker:compose:down:local": "docker-compose -f ../docker-compose.yml down",
    "docker:compose:down:remote": "docker-compose -f ../docker-compose.yml -H ssh://ubuntu@54.167.123.102 down"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "config": "^3.2.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.3.0",
    "gravatar": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mongoose": "^5.9.4",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-moment": "^0.9.7",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-thunk": "^2.3.0",
    "request": "^2.88.0",
    "semantic-ui-react": "^0.88.2",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/node": "^7.7.7",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.8.3",
    "@hot-loader/react-dom": "^16.11.0",
    "@types/react": "^16.9.23",
    "babel-eslint": "^10.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.0.2",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "file-loader": "^5.1.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.9.0",
    "nodemon": "^2.0.2",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "prettier": "^1.19.1",
    "react-hot-loader": "^4.12.19",
    "serve": "^11.3.0",
    "svg-url-loader": "^4.0.0",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "url-loader": "^3.0.0",
    "webpack": "^4.41.5",
